<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/singleItemOfMyBasket"
        android:drawSelectorOnTop="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <RelativeLayout
                android:id="@+id/sc_rl_wrapper"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_gravity="fill"
                android:layout_rowSpan="2"
                android:layout_weight="0.725">

                <ImageView
                    android:id="@+id/fsc_iv_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:src="@drawable/category_baths"
                    android:background="#009ccc"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:layout_alignParentBottom="true"
                    android:text="Baths"
                    android:id="@+id/basketComplaintParent"
                    android:padding="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.275">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left|center_vertical"
                android:padding="5dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left|center_vertical"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:maxLines="1"
                        android:text="Issue"
                        android:textColor="#707070"
                        android:id="@+id/basketComplaintDetailsLabel"
                        android:gravity="left"
                        android:textSize="11sp"
                        android:layout_weight="0.7"
                        android:textStyle="bold" />

                    <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                        android:text="Details"
                        android:textColor="#505050"
                android:id="@+id/basketComplaintDetails"
                        android:gravity="left"
                android:textSize="12sp"
                        android:layout_weight="0.3"
                        android:maxLines="2"
                        android:paddingLeft="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left|center_vertical"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:maxLines="1"
                        android:text="Quantity"
                        android:textColor="#707070"
                        android:id="@+id/basketComplaintQuantityLabel"
                        android:gravity="left"
                        android:textSize="11sp"
                        android:layout_weight="0.7"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:maxLines="1"
                        android:text="Details"
                        android:textColor="#505050"
                        android:id="@+id/basketComplaintQuantity"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_weight="0.3"
                        android:paddingLeft="5dp" />
</LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left|center_vertical"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:maxLines="2"
                        android:text="Description"
                        android:textColor="#707070"
                        android:id="@+id/basketComplaintDescriptionLabel"
                        android:gravity="left"
                        android:textSize="11sp"
                        android:layout_weight="0.7"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#505050"
                        android:id="@+id/basketComplaintDescription"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_weight="0.3"
                        android:maxLines="2"
                        android:paddingLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/editcomplaint"
                    android:layout_margin="5dp"
                    android:id="@+id/editBasketComplaint"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/remove"
                    android:layout_margin="5dp"
                    android:id="@+id/removeBasketComplaint"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>