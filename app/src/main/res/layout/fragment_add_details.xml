<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.servicecall.app.fragment.AddDetailsFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adAmenityTypeLabel"
                android:textColor="#0099cc"
                android:textStyle="bold"
                android:shadowColor="#0099dd"
                android:textSize="14sp"
                android:id="@+id/adamtype"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/adAmenity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adAmenity"
                android:textColor="#ff3a4359"
                android:shadowColor="#ff865429"
                android:textSize="13sp"
                android:gravity="fill_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/adIssueLabel"
                android:textColor="#0099cc"
                android:textStyle="bold"
                android:shadowColor="#fff1974a"
                android:textSize="14sp"
                android:id="@+id/admyissue"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/adSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/adIssueType"
                android:textColor="#ff3a4359"
                android:shadowColor="#ff865429"
                android:textSize="13sp"
                android:gravity="fill_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:padding="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/adCountLabel"
                android:textColor="#0099cc"
                android:textStyle="bold"
                android:shadowColor="#0099dd"
                android:textSize="14sp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:gravity="left|center_vertical">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/ad_s_count"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:shadowColor="#ff865429"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical" />

                    <TextView
                        android:id="@+id/ad_s_count_placeholder"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:shadowColor="#ff865429"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:visibility="gone"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/adDescLabel"
                android:textColor="#0099cc"
                android:textStyle="bold"
                android:shadowColor="#fff1974a"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/adEnterDescLabel"
                android:textColor="#ff798db9"
                android:shadowColor="#fff1974a"
                android:textSize="10sp"
                android:gravity="center_vertical|fill_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="-30dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/adDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="13sp" />

                <TextView
                    android:id="@+id/adDescriptionPlaceholder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13sp"
                    android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="85dp"
            android:layout_gravity="center"
            android:gravity="center">

            <include
                android:id="@+id/take_photo_container_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/take_photo_container" />

            <include
                android:id="@+id/photo_taken_container_ref"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                layout="@layout/photo_taken_container"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/ad_b_basket"
            android:text="+Basket"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/submit"
            android:layout_height="match_parent"
            android:background="#7b9fad"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:drawSelectorOnTop="true"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ad_b_another"
            android:text="Add another"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/add_another"
            android:layout_height="match_parent"
            android:background="#90bbc9"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:drawSelectorOnTop="true"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ad_b_discard"
            android:text="Discard"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/discard"
            android:layout_height="match_parent"
            android:background="#DBDBDB"
            android:textColor="#707070"
            android:padding="10dp"
            android:drawSelectorOnTop="true"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/editcomplaint"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/editBasketComplaint"
        android:visibility="gone"/>
</RelativeLayout>
