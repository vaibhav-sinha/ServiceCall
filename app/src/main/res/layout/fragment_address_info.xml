<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/etOccupantTypeLabel"
                    android:text="Occupant Type"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <Spinner
                        android:id="@+id/et_s_occupant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#ff865429"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/etPropertyTypeLabel"
                    android:text="Property Type"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <Spinner
                        android:id="@+id/et_s_property"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#ff865429"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etUserNameLabel"
                android:text="Name"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_marginBottom="-5dp" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Name">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddressLabel"
                android:text="Address"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_marginBottom="-5dp" />

            <EditText
                android:id="@+id/etAddressName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPostcodeLabel"
                android:text="Postcode"
                android:padding="5dp"
                android:visibility="invisible"
                android:layout_marginBottom="-5dp" />

            <EditText
                android:id="@+id/etPostcodeName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Postcode">
            </EditText>

        </LinearLayout>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etDayTelNumberLabel"
    android:text="DayTime Tel Number"
    android:padding="5dp"
    android:visibility="invisible"
    android:layout_marginBottom="-5dp" />

<EditText
    android:id="@+id/etDayTelNumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="text|number"
    android:hint="DayTime Tel Number">
</EditText>

</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etWorkNumberLabel"
    android:text="Work Tel Number (Optional)"
    android:padding="5dp"
    android:visibility="invisible"
    android:layout_marginBottom="-5dp" />

<EditText
    android:id="@+id/etWorkTelNumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="text|number"
    android:hint="Work Tel Number (Optional)">
</EditText>

</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etMobileNumberLabel"
    android:text="Mobile Tel Number (Optional)"
    android:padding="5dp"
    android:visibility="invisible"
    android:layout_marginBottom="-5dp" />

<EditText
    android:id="@+id/etMobileTelNumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="text|number"
    android:hint="Mobile Tel Number (Optional)">
</EditText>

</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etEmailLabel"
    android:text="Email"
    android:padding="5dp"
    android:visibility="invisible"
    android:layout_marginBottom="-5dp" />

<EditText
    android:id="@+id/etEmail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="Email">
</EditText>

</LinearLayout>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Availability at Home"
    android:gravity="center"
    android:padding="10dp"/>

<LinearLayout
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:orientation="horizontal">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text=""
    android:gravity="center"/>

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="Mon"
    android:gravity="center"/>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="Tue"
    android:gravity="center"/>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="Wed"
    android:gravity="center"/>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="Thu"
    android:gravity="center"/>

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="Fri"
    android:gravity="center"/>

</LinearLayout>

<LinearLayout
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:orientation="horizontal">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="AM"
    android:gravity="center"/>

<CheckBox
    android:id="@+id/cbMonAM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbTueAM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbWedAM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbThuAM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbFriAM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

</LinearLayout>

<LinearLayout
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:orientation="horizontal">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16"
    android:text="PM"
    android:gravity="center"/>

<CheckBox
    android:id="@+id/cbMonPM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbTuePM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbWedPM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbThuPM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

<CheckBox
    android:id="@+id/cbFriPM"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.16">
</CheckBox>

</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etAdditionalInfoLabel"
    android:text="Additional Info"
    android:padding="5dp"
    android:visibility="invisible"
    android:layout_marginBottom="-5dp" />

<EditText
    android:id="@+id/etAdditionalInfo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:hint="Additional Info">
</EditText>

</LinearLayout>

</LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/submitComplaints"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/pushtoserver"
                    android:layout_weight="0.33"
                    android:background="#7b9fad"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:drawSelectorOnTop="true"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/resetDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Reset"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/reset"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:layout_weight="0.33"
                    android:background="#90bbc9"
                    android:padding="10dp"
                    android:drawSelectorOnTop="true"/>

                <Button
                    android:id="@+id/discardOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Discard"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/discard"
                    android:background="#DBDBDB"
                    android:textColor="#707070"
                    android:padding="10dp"
                    android:drawSelectorOnTop="true"
                    android:textStyle="bold"
                    android:layout_weight="0.33" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>